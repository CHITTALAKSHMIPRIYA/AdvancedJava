<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:context="http://www.springframework.org/schema/context"
       xsi:schemaLocation="http://www.springframework.org/schema/beans 
           http://www.springframework.org/schema/beans/spring-beans-3.0.xsd
           http://www.springframework.org/schema/context
           http://www.springframework.org/schema/context/spring-context-3.0.xsd">

		<context:annotation-config/>
		<bean id="emp" class="com.bridgelabz.Resource.Employee"/>
		<bean id="address" class="com.bridgelabz.Resource.Address">
			<property name="city" value="Nandyal"/>
		</bean>		
		<bean id="company" class="com.bridgelabz.Resource.Company">
			<property name="compName" value="Capgemini"/>
		</bean>		
</beans> 